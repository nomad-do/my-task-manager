{
  "version": "0.2.0",
  "configurations": [
      {
          "type": "node",
          "request": "launch",
          "name": "Launch Backend",
          "program": "${workspaceFolder}/backend/server.js",
          "env": {
              "NODE_ENV": "development"
          },
          "outFiles": ["${workspaceFolder}/backend/**/*.js"]
      },
      {
          "type": "node",
          "request": "launch",
          "name": "Launch Frontend",
          "runtimeExecutable": "npm",
          "runtimeArgs": ["start"],
          "cwd": "${workspaceFolder}/frontend-react"
      }
  ]
}
